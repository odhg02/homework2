<p id="notice"><%= notice %></p>

<h1>CRUD 과제</h1>

<table>
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to '글 보기', post %></td>
        <td><%= link_to '편집', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: '정말로 삭제 하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새글 쓰기', new_post_path %>
